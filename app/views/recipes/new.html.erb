<div>
    <div>
        <%= link_to 'Back', user_recipes_path(current_user) %>      
    </div>
  <h3>Create a new recipe</h3>
  <%= form_with model: @recipe, url: user_recipes_path do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :preparation_time %>
      <%= f.number_field :preparation_time %>
    </div>
    <div>
      <%= f.label :cooking_time %>
      <%= f.number_field :cooking_time %>
    </div>
    <div>
      <%= f.label :public %>
      <%= f.check_box :public %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>