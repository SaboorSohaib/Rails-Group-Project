<section class="container">
<div>
<% if user_signed_in?%>
  <div>
    <%= link_to 'Back', user_recipes_path(current_user) %>      
  </div>
  <% end %>
  <div class="row">
  <h1 class="text-center"><%= @recipe.name %></h1>
    <div class="col-6 fs-4">
      <div><strong>Preparation Time:</strong> <%= @recipe.preparation_time %> hours(s)</div>
      <div><strong> Cooking Time:</strong> <%= @recipe.cooking_time %> hours(s)</div>
      <div><strong> Steps to go here...</strong></div>
    </div>
    <div class="col-6">
      <div class="form-check form-switch d-flex justify-content-end fs-4">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" 
          <% if @recipe.public %>
            checked='checked'
          <% end %>>
        <label class="form-check-label" for="flexSwitchCheckDefault">Public</label>
      </div>
    </div>
  </div>
  
  <div class="d-flex justify-content-between my-3">
    <%= link_to "Generate Shopping List", user_recipe_general_shopping_lists_path(@user, @recipe), class: 'btn btn-primary' %>
    <button class="btn btn-primary">Add Intgrediend </button>
  </div>
  <div class="bg-dark", style="height: 4px"> </div>
        <table class="table table-striped mt-5">
            <thead class="table-secondary">
                <tr>
                    <th>Food</th>
                    <th>Quantity</th>
                    <th>Value</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @foods.each do |food| %>
                    <tr>
                        <td><%= food.name %></td>
                        <td><%= food.price %></td>
                        <td><%= food.quantity %> <%= food.measurement_unit %></td>
                        <td><%= button_to("Delete", user_food_path(food.id), method: :delete)%></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    <div>

</section>